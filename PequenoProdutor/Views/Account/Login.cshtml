
@using PequenoProdutor.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="row col-xs-12 col-sm-12 col-md-12 col-lg-12" align="center">
    <div class="col-md-7; container" align="center">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h2>@ViewBag.Title</h2>
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group" align="center">
                        @Html.LabelFor(m => m.Email, new { @class = "col-4 control-label" })
                    <div class="col-6">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div><br />
                <div class="form-group" align="center">
                        @Html.LabelFor(m => m.Password, new { @class = "col-4 control-label" })
                    <div class="col-6">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                <div class="form-group" align="center">
                        <input type="submit" value="Logon" class="btn btn-default" />
                    </div>
                <p>
                    @Html.ActionLink("Registre-se como um novo usuário", "Register")
                </p>
                @* Habilite quando a confirmação da conta estiver ativada para a funcionalidade de redefinição de senha
                    <p>
                        @Html.ActionLink("Esqueceu sua senha?", "ForgotPassword")
                    </p>*@
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
